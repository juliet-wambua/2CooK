<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecipeDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipeImageView"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:src="@drawable/chick2"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/favourites"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-90dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_star"
                android:tooltipText="Add To Favourites"
                android:padding="5dp"
                android:background="@drawable/rectangle4"
                android:elevation="4dp"
                android:translationZ="2sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="-19dp"
                android:layout_marginHorizontal="10sp"
                android:padding="10sp"
                android:background="@drawable/rectangle"
                android:elevation="4dp">


            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="25sp"
                android:layout_marginBottom="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp"
                android:padding="10sp"
                android:textColor="@color/primaryColor"
                android:elevation="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="20sp"
                android:textColor="@color/primaryColor"/>

            <ListView
                android:id="@+id/ingredientsListView"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:transcriptMode="normal">

            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textSize="20sp"
                android:textColor="@color/primaryColor" />
            <TextView
                android:id="@+id/instructionsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instruction_details"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>